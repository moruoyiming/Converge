<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SimpleActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <com.example.converge.note.ui.drawtext.view.ColorChangeTextView1
            android:id="@+id/id_tab_01"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:progress="1"
            app:text="关注"
            app:text_color="#ff000000"
            app:text_color_change="#ffff0000"
            app:text_size="18sp" />

        <com.example.converge.note.ui.drawtext.view.ColorChangeTextView1
            android:id="@+id/id_tab_02"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:text="热点"
            app:text_color="#ff000000"
            app:text_color_change="#ffff0000"
            app:text_size="18sp" />

        <com.example.converge.note.ui.drawtext.view.ColorChangeTextView1
            android:id="@+id/id_tab_03"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:text="推荐"
            app:text_color="#ff000000"
            app:text_color_change="#ffff0000"
            app:text_size="18sp" />

        <com.example.converge.note.ui.drawtext.view.ColorChangeTextView1
            android:id="@+id/id_tab_04"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:text="长沙"
            app:text_color="#ff000000"
            app:text_color_change="#ffff0000"
            app:text_size="18sp" />


    </LinearLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/id_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>


</LinearLayout>