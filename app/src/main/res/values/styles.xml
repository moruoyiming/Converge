<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">true</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="SplashTheme" parent="AppTheme">
<!--        <item name="android:windowFullscreen">true</item>-->
        <item name="android:background">@drawable/theme_background</item>
    </style>
    <style name="Custom_Dialog_Style" parent="@android:style/Theme.Dialog">
        <!--<item name="android:windowFrame">@null</item>&lt;!&ndash;边框&ndash;&gt;-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <!--<item name="android:windowNoTitle">true</item>&lt;!&ndash;无标题&ndash;&gt;-->
<!--        <item name="android:windowBackground">#00000000</item>&lt;!&ndash;背景透明&ndash;&gt;-->
        <item name="android:backgroundDimEnabled">true</item><!--模糊-->
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>
